<resources>

  <!-- Base application theme. -->

  <style name="AppTheme.Base"
         parent="Theme.AppCompat.NoActionBar">
    <item name="android:textColorPrimary">@color/accent</item>
    <item name="android:textViewStyle">@style/AppTheme.TextView.Primary</item>
    <item name="android:editTextStyle">@style/AppTheme.EditText.Default</item>
    <item name="android:buttonStyle">@style/AppTheme.Button.Default</item>
  </style>

  <style name="AppTheme"
         parent="AppTheme.Base">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/primary</item>
    <item name="colorPrimaryDark">@color/primary_dark</item>
    <item name="colorAccent">@color/accent</item>
    <item name="colorControlNormal">@color/accent</item>
  </style>

  <!-- TextView -->

  <style name="AppTheme.TextView">
    <item name="android:gravity">center</item>
    <item name="android:textSize">@dimen/global_content</item>
  </style>

  <style name="AppTheme.TextView.Header"
         parent="AppTheme.TextView">
    <item name="android:textColor">@color/dark_text</item>
    <item name="android:textSize">@dimen/sp_22</item>
  </style>


  <style name="AppTheme.TextView.Primary"
         parent="AppTheme.TextView">
    <item name="android:textColor">@color/global_primary_text</item>
  </style>

  <style name="AppTheme.TextView.Primary.Header"
         parent="AppTheme.TextView.Primary">
    <item name="defaultFontStyle">medium</item>
  </style>

  <style name="AppTheme.TextView.Secondary"
         parent="AppTheme.TextView">
    <item name="android:textColor">@color/global_secondary_text</item>
  </style>

  <style name="AppTheme.TextView.Secondary.Header"
         parent="AppTheme.TextView.Secondary">
    <item name="defaultFontStyle">medium</item>
  </style>

  <style name="AppTheme.TextView.Content.Primary"
         parent="AppTheme.TextView">
    <item name="android:textColor">@color/global_primary_content_text</item>
  </style>

  <style name="AppTheme.TextView.Content.Primary.Header"
         parent="AppTheme.TextView.Content.Primary">

  </style>

  <style name="AppTheme.TextView.Content.Secondary"
         parent="AppTheme.TextView">
    <item name="android:textColor">@color/global_secondary_content_text</item>
  </style>

  <!-- Edit Text -->

  <style name="AppTheme.EditText"
         parent="@style/Widget.AppCompat.EditText">
    <item name="android:textSize">@dimen/global_input_field</item>
  </style>

  <style name="AppTheme.EditText.Default"
         parent="AppTheme.EditText">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/dp_40</item>
    <item name="android:background">@null</item>
    <item name="android:drawablePadding">@dimen/dp_10</item>
    <item name="android:gravity">left|center_vertical</item>
    <item name="android:padding">@dimen/dp_8</item>
    <item name="android:textColor">@color/global_input_field_text</item>
    <item name="android:textColorHint">@color/global_input_field_hint</item>
    <item name="android:lines">1</item>
  </style>

  <!-- Button -->

  <style name="AppTheme.Button"
         parent="@style/Widget.AppCompat.Button">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/dp_44</item>
    <item name="android:textSize">@dimen/global_button</item>
    <item name="android:gravity">center</item>
    <item name="android:textAllCaps">false</item>
  </style>

  <style name="AppTheme.Button.Default"
         parent="AppTheme.Button">
    <item name="android:background">@null</item>
  </style>

  <style name="AppTheme.Button.Solid"
         parent="AppTheme.Button">
    <item name="defaultFontStyle">medium</item>
  </style>

  <style name="AppTheme.Button.Border"
         parent="AppTheme.Button">
    <item name="defaultFontStyle">medium</item>
  </style>

  <style name="AppTheme.Button.Link"
         parent="AppTheme.Button">
    <item name="android:background">@null</item>
  </style>

  <style name="AppTheme.Button.Solid.Primary"
         parent="AppTheme.Button.Solid">
    <item name="android:background">@drawable/primary_solid_button</item>
    <item name="android:textColor">@color/global_primary_solid_button_text</item>
  </style>

  <style name="AppTheme.Button.Solid.Secondary"
         parent="AppTheme.Button.Solid">
    <item name="android:background">@drawable/secondary_solid_button</item>
    <item name="android:textColor">@color/global_secondary_solid_button_text</item>
  </style>

  <style name="AppTheme.Button.Solid.Tertiary"
         parent="AppTheme.Button.Solid">
    <item name="android:background">@drawable/tertiary_solid_button</item>
    <item name="android:textColor">@color/global_tertiary_solid_button_text</item>
  </style>

  <style name="AppTheme.Button.Border.Primary"
         parent="AppTheme.Button.Border">
    <item name="android:background">@drawable/primary_border_button</item>
    <item name="android:textColor">@color/global_primary_border_button_text</item>
  </style>

  <style name="AppTheme.Button.Border.Secondary"
         parent="AppTheme.Button.Border">
    <item name="android:background">@drawable/secondary_border_button</item>
    <item name="android:textColor">@color/global_secondary_border_button_text</item>
  </style>

  <style name="AppTheme.Button.Link.Content.Primary"
         parent="AppTheme.Button.Link">
    <item name="android:textColor">@color/global_primary_content_text</item>
  </style>

  <style name="AppTheme.Button.Link.Content.Secondary"
         parent="AppTheme.Button.Link">
    <item name="android:textColor">@color/global_secondary_content_text</item>
  </style>

  <!-- ImageView -->

  <style name="AppTheme.ImageView"
         parent="aspect_fill">

  </style>

  <style name="AppTheme.ImageView.Default"
         parent="AppTheme.ImageView">

  </style>

  <!-- Dialog -->

  <style name="AppTheme.Dialog">
    <item name="android:layout_width">@dimen/dp_328</item>
    <item name="android:minWidth">@dimen/dp_328</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:background">@drawable/primary_dialog</item>
    <item name="android:padding">@dimen/dp_16</item>
  </style>

  <style name="AppTheme.Dialog.Error"
         parent="AppTheme.Dialog">

  </style>

  <style name="AppTheme.Dialog.Loading"
         parent="AppTheme.Dialog">

  </style>

  <style name="AppTheme.Dialog.Info"
         parent="AppTheme.Dialog">

  </style>

  <style name="AppTheme.Dialog.Title"
         parent="AppTheme.TextView.Content.Primary">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/sp_18</item>
    <item name="defaultFontStyle">medium</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">start</item>
  </style>

  <style name="AppTheme.Dialog.Description"
         parent="AppTheme.TextView.Content.Primary">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textSize">@dimen/global_content</item>
    <item name="android:gravity">center</item>
    <item name="android:layout_gravity">start</item>
  </style>

  <!-- ProgressBar -->

  <style name="AppTheme.Widget.ProgressBar.Primary" parent="Widget.AppCompat.ProgressBar">

  </style>

  <style name="AppTheme.Widget.ProgressBar.Secondary" parent="Widget.AppCompat.ProgressBar">

  </style>

  <!-- Container -->

  <style name="AppTheme.Container">

  </style>

  <style name="AppTheme.Container.Content"
         parent="AppTheme.Container">
    <item name="android:padding">@dimen/global_container_view_padding</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="AppTheme.Container.Content.Linear"
         parent="AppTheme.Container.Content">
    <item name="android:gravity">center</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="AppTheme.Container.Content.Relative"
         parent="AppTheme.Container.Content">

  </style>


</resources>
